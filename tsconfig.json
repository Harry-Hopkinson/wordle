{
  "compilerOptions": {
    "strict": false,
    "outDir": "./build",
    "allowJs": true,
    "target": "ES2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "plugins": [
      {
        "name": "typescript-strict-plugin"
      }
    ]
  },
  "include": [
    "./src/**/*"
  ]
}